@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model EzWeb.Pages.Contact
@{
    ViewData["Title"] = "Contact";
}

<!-- ====== start contact page ====== -->
<section class="contact section-padding pt-50 style-6">
    <div class="container">
        <div class="section-head text-center mb-100 style-5">
            <h2 class="mb-20"> Get In <span> Touch </span> </h2>
            <p>We will contact again within 24h after receiving your request</p>
        </div>
        <div class="text-center mb-100">
            <h2 class="ltspc-20 text-uppercase fs-1 lh-1 mb-50 mt-30 color-blue5">(+23) 5535 68 68</h2>
            <h4 class="fw-normal mb-20 color-000">contact@ezwebsolution.com</h4>
            <h4 class="fw-normal mb-10 color-000">58 Howard St, San Francisco, CA 941</h4>
        </div>
        <div class="content">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    @if (!Model.IsSucccess)
                    {


                        <form class="form" method="post">
                            <p class="text-center text-danger fs-12px mb-30">The field required is marked with *</p>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group mb-20">
                                        <input type="text" asp-for="@Model.Name" class="form-control" placeholder="Name">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group mb-20">
                                        <input type="text" asp-for="@Model.Email" class="form-control" placeholder="Email Address *">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group mb-20">
                                        <input type="text" asp-for="@Model.Phone" class="form-control" placeholder="Phone Number (option)">
                                    </div>
                                </div>

                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <textarea rows="10" asp-for="@Model.Comments" class="form-control" placeholder="How can we help you?"></textarea>
                                    </div>
                                </div>

                                <div class="col-lg-12 text-center mt-30 mb-30">
                                    <input type="submit" name="Submit" value="Send Your Request" class="btn rounded-pill blue5-3Dbutn hover-blue2 sm-butn fw-bold" />
                                </div>
                            </div>
                        </form>
                    }
                    else
                    {
                      <h4>Thanks for contact us! We will connect with you as soon as possible.</h4>
                            
                       
                    }

                </div>
                <img src="assets/img/icons/contact_a.png" alt="" class="contact_a">
                <img src="assets/img/icons/contact_message.png" alt="" class="contact_message">
            </div>
        </div>
    </div>
</section>
<!-- ====== end contact page ====== -->
